@using MarcketAppliction.EntitiesExtensions
@model IEnumerable<MarcketDataLayer.Entities.Slider.Slider>
@{
    ViewData["Title"] = "مدریت اسلایدر صفحه اصلی";
}

<h2>مدریت اسلایدر صفحه اصلی</h2>
<a class="btn btn-success" asp-action="CreateSlider" asp-controller="DefaultSiteSetting" asp-area="Admin"> افزودت اسلایدر </a>
<hr />
<br />
<div class="col-xs-12 col-md-12">
    <div class="well with-header with-footer">
        <div class="header bg-magenta">
            Bordered Table
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>

                    <th>تصاویر</th>
                    <th>وضیعت</th>
                    <th>نوشته اول</th>
                    <th>نوشته دوم</th>
                    <th>توضیحات</th>
                    <th>دستورات</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <img style="width:100px; height:100px;" src="@item.GetSliderImageAddress()" />
                            </td>
                            <td>

                                @if (@item.IsActive)
                                {


                                    <p>فعال</p>
                                }
                                else
                                {
                                    <p> غیر فعال </p>

                                }


                            </td>
                            <td>
                                @item.MainHeader
                            </td>
                            <td>
                                @item.SecondHeader
                            </td>
                            <td>
                                @item.Description
                            </td>
                          
                            <td>
                                <a asp-action="Delete" asp-controller="DefaultSiteSetting" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning "> حذف</a>
                                <a asp-action="GetSliderforEdit" asp-controller="DefaultSiteSetting" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info "> ویرایش</a>

                            </td>
                        </tr>

                    }

                }
                else
                {
                    <partial name="_NoItemFound" />
                }


            </tbody>
        </table>


    </div>

</div>